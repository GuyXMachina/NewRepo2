@{
    ViewData["Title"] = "Facility Manager Dashboard";
}

<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-4">Welcome to the Facility Manager Dashboard</h1>
            <hr class="my-4">
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <p class="lead">Here you can manage all the facilities, bookings, and more.</p>
        </div>
    </div>
    <div class="row mt-5">
        <!-- Manage Facilities Card -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x mb-3"></i>
                    <h5 class="card-title">Manage Facilities</h5>
                    <p class="card-text">View and manage all facilities.</p>
                    <a asp-controller="Facilities" asp-action="Index" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
        <!-- View Bookings Card -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-list-alt fa-3x mb-3"></i>
                    <h5 class="card-title">View Bookings</h5>
                    <p class="card-text">See all current and past bookings.</p>
                    <a asp-controller="Bookings" asp-action="Index" class="btn btn-secondary">Go</a>
                </div>
            </div>
        </div>
        <!-- Reports Card -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">Generate and view reports.</p>
                    <a asp-controller="Transactions" asp-action="Index" class="btn btn-success">Go</a>
                </div>
            </div>
        </div>
        <!-- Change Password Card -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-key fa-3x mb-3"></i>
                    <h5 class="card-title">Change Password</h5>
                    <p class="card-text">Update your account password.</p>
                    <a asp-action="ChangePassword" class="btn btn-warning">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>

