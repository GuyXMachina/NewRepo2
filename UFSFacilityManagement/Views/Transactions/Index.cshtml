@using System.Globalization;
@model IEnumerable<Transaction>

<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-4">Transactions</h1>
            <hr class="my-4">
        </div>
    </div>
    <div class="row mb-4">
        <div class="col text-right">
            <a asp-action="Create" class="btn btn-success">Create New Transaction</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-hover table-responsive-lg">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(model => model.Amount)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.TransactionDate)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Amount.ToString("C", new CultureInfo("en-ZA"))</td>
                            <td>@Html.DisplayFor(modelItem => item.TransactionDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.TransactionID" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.TransactionID" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.TransactionID" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                    <form asp-action="ProcessTransaction" method="post">
                        <button class="btn btn-info" type="submit">Generate Transaction Report</button>
                    </form>

                </tbody>
            </table>
        </div>
    </div>
</div>
