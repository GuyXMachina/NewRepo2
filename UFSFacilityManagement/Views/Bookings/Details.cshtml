@model Booking

@{
    ViewData["Title"] = "Details";
    bool isAdmin = User.IsInRole("FacilityAdmin");
    bool isManager = User.IsInRole("FacilityManager");
}

<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Facility)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Facility.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityManager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacilityManager.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityInCharge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacilityInCharge.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>
</div>
<div>
    @if (isAdmin || isManager)
    {
        <a asp-action="Edit" asp-route-id="@Model.BookingID" class="btn btn-primary">Edit</a>
    }
    <a asp-action="CheckOut" asp-controller="Bookings" asp-route-id="@Model.Facility.FacilityID" class="btn btn-primary">Pay Now</a>
    <a asp-action="CalendarBook" asp-controller="Bookings" class="btn btn-primary">Back to Bookings</a>
    
</div>
