@model UFSFacilityManagement.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

@section Styles{
    <style>
        .gradient-custom {
            /* fallback for old browsers */
            background: #6a11cb;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
        }
    </style>
}

<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Edit Boooking</h2>
                            <p class="text-white-50 mb-5">Please update the Booking details!</p>

                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="BookingID" />
                                <div class="form-group">
                                    <label asp-for="FacilityID" class="control-label"></label>
                                    <select asp-for="FacilityID" class="form-control" asp-items="ViewBag.FacilityID"></select>
                                    <span asp-validation-for="FacilityID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserID" class="control-label"></label>
                                    <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                                    <span asp-validation-for="UserID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="StartTime" class="control-label"></label>
                                    <input asp-for="StartTime" class="form-control" />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EndTime" class="control-label"></label>
                                    <input asp-for="EndTime" class="form-control" />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label"></label>
                                    <input asp-for="Status" class="form-control" />
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FacilityManagerId" class="control-label"></label>
                                    <select asp-for="FacilityManagerId" class="form-control" asp-items="ViewBag.FacilityManagerId"></select>
                                    <span asp-validation-for="FacilityManagerId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FacilityInChargeId" class="control-label"></label>
                                    <select asp-for="FacilityInChargeId" class="form-control" asp-items="ViewBag.FacilityInChargeId"></select>
                                    <span asp-validation-for="FacilityInChargeId" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-outline-light btn-lg px-5">Save</button>
                            </form>

                        </div>

                        <div>
                            <a href="@Url.Action("Index", "Bookings")" class="text-white-50 fw-bold">Back to List</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
