@model List<User>

<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-4">List of Users</h1>
            <hr class="my-4">
        </div>
    </div>
    <form asp-action="ProcessUsers" method="post">
        <button class="btn btn-info" type="submit">Generate User Report</button>
    </form>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>User Type</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <!-- Add more columns as needed -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserType</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <!-- Add more fields as needed -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
