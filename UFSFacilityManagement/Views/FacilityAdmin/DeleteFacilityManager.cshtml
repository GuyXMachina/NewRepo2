@model User
@section Styles{
    <style>
        .gradient-custom {
            background: #ff416c;
            background: -webkit-linear-gradient(to right bottom, #ff416c, #ff4b2b);
            background: linear-gradient(to right bottom, #ff416c, #ff4b2b);
        }
        </style>
}
<section class="gradient-custom">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Delete Facility Manager</p>
                                <p class="text-center">Are you sure you want to delete this Facility Manager?</p>
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <dl class="row">
                                    <dt class="col-sm-4">First Name</dt>
                                    <dd class="col-sm-8">@Model.Name</dd>
                                    <dt class="col-sm-4">Last Name</dt>
                                    <dd class="col-sm-8">@Model.Surname</dd>
                                    <!-- Add other fields as needed -->
                                </dl>
                                <form asp-action="DeleteFacilityManager" method="post">
                                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                                    </div>
                                </form>
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <a asp-action="FacilityManagers" class="btn btn-secondary btn-lg">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


