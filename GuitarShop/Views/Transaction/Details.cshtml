@model Transaction

<h2>Transaction Details</h2>

<div>
    <h4>Transaction ID:</h4>
    <p>@Model.TransactionID</p>

    <h4>Booking ID:</h4>
    <p>@Model.BookingID</p>

    <h4>Amount:</h4>
    <p>@Model.Amount</p>

    <h4>Date:</h4>
    <p>@Model.TransactionDate.ToShortDateString()</p>

    <h4>Payment Method:</h4>
    <p>@Model.PaymentMethod</p>
</div>

<a asp-action="ManageTransactions" class="btn btn-secondary">Back to List</a>

