@model IEnumerable<Transaction>

<h2>All Transactions (Admin View)</h2>

<table class="table">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Booking ID</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Payment Method</th>
            <th>Actions</th> <!-- Admin specific column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.TransactionID</td>
                <td>@transaction.BookingID</td>
                <td>@transaction.Amount</td>
                <td>@transaction.TransactionDate</td>
                <td>@transaction.PaymentMethod</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@transaction.TransactionID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@transaction.TransactionID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@transaction.TransactionID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
