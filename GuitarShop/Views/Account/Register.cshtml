@model RegisterModel

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-user-plus"></i>Registration</h2>
        </div>
        <div class="card-body">
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-action="Register" asp-controller="Account" method="post">
                <div class="form-group">
                    <label asp-for="UserType"><i class="fas fa-users"></i> User Type</label>
                    <select asp-for="UserType" asp-items="Html.GetEnumSelectList<UserType>()" class="form-control" id="userTypeSelect">
                        <option value="">Select User Type</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="UserName"><i class="fas fa-user"></i> Name and Surname</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"><i class="fas fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group" id="studentNumberDiv" style="display:none;">
                    <label asp-for="StudentNumber"></label>
                    <input asp-for="StudentNumber" class="form-control" />
                </div>
                <div class="form-group" id="employeeNumberDiv" style="display:none;">
                    <label asp-for="EmployeeNumber"></label>
                    <input asp-for="EmployeeNumber" class="form-control" />
                </div>
                <div class="form-group" id="passportNumberDiv" style="display:none;">
                    <label asp-for="PassportNumber"></label>
                    <input asp-for="PassportNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
                <button class="btn btn-success btn-lg btn-block" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>
@if (TempData["message"] != null)
{

    <script src="/lib/jquery/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        toastr.success('@TempData["message"]')
    </script>

}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#userTypeSelect').change(function () {
                let selectedType = parseInt($(this).val());
                // Hide all first
                $('#studentNumberDiv').hide();
                $('#employeeNumberDiv').hide();
                $('#passportNumberDiv').hide();
                // Show the selected
                if (selectedType === 0) {  // Student
                    $('#studentNumberDiv').show();
                } else if (selectedType === 1) {  // Visitor
                    $('#passportNumberDiv').show();
                } else if (selectedType === 2) {  // Staff
                    $('#employeeNumberDiv').show();
                }
            });
        });
    </script>
}



