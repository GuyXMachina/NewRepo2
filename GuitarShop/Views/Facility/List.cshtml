@model FacilityListViewModel

@{
    var nameSortParam = ViewData["NameSortParam"];
    var priceSortParam = ViewData["PriceSortParam"];
}

<h1 class="text-center">Available Facilities</h1>

<!-- Sorting UI -->
<div class="container">
    <div class="row">
        <div class="col">
            <h4>Sort By:</h4>
            <a asp-action="List" asp-route-sortBy="@nameSortParam">Name</a> |
            <a asp-action="List" asp-route-sortBy="@priceSortParam">Price</a>
        </div>
    </div>
</div>

<!-- Facility Listing -->
<div class="container">
    <div class="row">
        @if (Model?.Facilities != null)
        {
            foreach (var facility in Model.Facilities)
            {
                <div class="col-md-3">
                    <div class="card mb-4">
                        <img src="@facility.Code" class="card-img-top" alt="@facility.Name">
                        <div class="card-body">
                            <h5 class="card-title">@facility.Name</h5>
                            <p class="card-text">Price: @facility.Price (@facility.PricingType)</p>
                            <p class="card-text">Discount: @facility.DiscountAmount</p>
                            <p class="card-text">Capacity: @facility.Capacity</p>
                            <p class="card-text">Location: @facility.Location</p>
                            <a href="@Url.Action("Details", new { id = facility.FacilityID })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No facilities available.</p>
        }
    </div>
</div>


<!-- Pagination UI -->
<div class="container">
    <nav aria-label="Facility navigation">
        <ul class="pagination pagination-lg justify-content-center">
            <li class="page-item @(Model.PagingInfo.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="List" asp-route-Page="@(Model.PagingInfo.CurrentPage - 1)">
                    <i class="fas fa-angle-left"></i> Previous
                </a>
            </li>

            @for (var page = 1; page <= Model.PagingInfo.TotalPages; page++)
            {
                <li class="page-item @(Model.PagingInfo.CurrentPage == page ? "active" : "")">
                    <a class="page-link" asp-action="List"></a>
                </li>
            }

            <li class="page-item @(Model.PagingInfo.CurrentPage == Model.PagingInfo.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="List" asp-route-Page="@(Model.PagingInfo.CurrentPage + 1)">
                    Next <i class="fas fa-angle-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>
