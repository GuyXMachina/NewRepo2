@model IEnumerable<GuitarShop.Models.Facility>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-4">Facility Management</h1>
            <hr class="my-4">
        </div>
    </div>
    <div class="row mb-4">
        <div class="col text-right">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.PricingType)</th>
                        <th>@Html.DisplayNameFor(model => model.DiscountPrice)</th>
                        <th>@Html.DisplayNameFor(model => model.DiscountPercent)</th>
                        <th>@Html.DisplayNameFor(model => model.Location)</th>
                        <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Code)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.PricingType)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiscountPrice)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiscountPercent)</td>
                            <td>@Html.DisplayFor(modelItem => item.Location)</td>
                            <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                            <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.FacilityID" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.FacilityID" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.FacilityID" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
