@{
    ViewBag.Title = "Home";
}
<div class="position-relative text-white" style="height: 100vh; width: 100vw;">
    <a id="facilityLink" href="#">
        <img id="switcherImage" src="" class="img-fluid w-100 h-100" alt="Facility Image" style="object-fit: cover; position: absolute; top: 0; left: 0; z-index: -1;">
    </a>
    <div class="position-absolute top-50 start-50 translate-middle text-center">
        <h1>Welcome to the UFS Facilities!</h1>
        <p>Make yourself at home and check out some of our Facilities.</p>
        <div class="d-flex justify-content-center mt-4">
            <a asp-controller="Facility" asp-action="List" class="btn btn-primary mx-2">View our facilities</a>
            <a asp-controller="Home" asp-action="About" class="btn btn-secondary mx-2">Learn more about us</a>
        </div>
    </div>
    <button id="prevButton" class="btn position-absolute top-50 start-0 translate-middle-y" style="background-color: rgba(255, 255, 255, 0.5);">
        <i class="fas fa-arrow-left text-primary"></i>
    </button>
    <button id="nextButton" class="btn position-absolute top-50 end-0 translate-middle-y" style="background-color: rgba(255, 255, 255, 0.5);">
        <i class="fas fa-arrow-right text-primary"></i>
    </button>
</div>

<!-- JavaScript for Image Switcher -->
<script>
    const facilities = [
        { image: "https://www.hussle.com/blog/wp-content/uploads/2020/12/Gym-structure-1080x675.png", link: "/facility1" },
        { image: "https://speedqueencommercial.com/en-us/wp-content/uploads/2020/01/Modern-laundry-room-with-Speed-Queen-commercial-laundry-equipment.png", link: "/facility2" },
        { image: "https://concreteuprising.com/wp-content/uploads/2019/05/iStock-925615406_res.jpg", link: "/facility3" },
        { image: "https://upload.wikimedia.org/wikipedia/commons/thumb/6/60/Statsbiblioteket_l%C3%A6sesalen-2.jpg/1280px-Statsbiblioteket_l%C3%A6sesalen-2.jpg", link: "/facility4" }
    ];

    let currentFacilityIndex = 0;

    function updateFacility() {
        const facility = facilities[currentFacilityIndex];
        document.getElementById("switcherImage").src = facility.image;
        document.getElementById("facilityLink").href = facility.link;
    }

    // Initialize with the first image
    updateFacility();

    document.getElementById("prevButton").addEventListener("click", () => {
        currentFacilityIndex--;
        if (currentFacilityIndex < 0) {
            currentFacilityIndex = facilities.length - 1;
        }
        updateFacility();
    });

    document.getElementById("nextButton").addEventListener("click", () => {
        currentFacilityIndex++;
        if (currentFacilityIndex >= facilities.length) {
            currentFacilityIndex = 0;
        }
        updateFacility();
    });
</script>
