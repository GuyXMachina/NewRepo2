@model FacilityManager

<h2>Update Facility Manager</h2>

<form asp-action="UpdateFacilityManager" asp-controller="FacilityAdmin" method="post">
    <!-- Hidden field for the ID -->
    <input type="hidden" asp-for="FacilityManagerId" />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IdentityUserId">User ID</label>
        <input asp-for="IdentityUserId" class="form-control" />
    </div>

    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="FacilityManagers" class="btn btn-secondary">Cancel</a>
</form>
