@model FacilityManager

<h2>Update Facility Manager</h2>

<form asp-action="UpdateFacilityManager" asp-controller="FacilityAdmin" method="post">
    <!-- Hidden field for the ID -->
    <input type="hidden" asp-for="EmployeeID" />

    <div class="form-group">
        <label asp-for="Name">First Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Surname">Last Name</label>
        <input asp-for="Surname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EmployeeID">User ID</label>
        <input asp-for="EmployeeID" class="form-control" />
    </div>

    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="FacilityManagers" class="btn btn-secondary">Cancel</a>
</form>
