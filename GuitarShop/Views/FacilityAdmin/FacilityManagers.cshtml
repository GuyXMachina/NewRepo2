@model IEnumerable<User>

<div class="container my-5">
    <div class="row">
        <div class="col text-center">
            <h2 class="display-4">Facility Managers</h2>
            <hr class="my-4">
        </div>
    </div>
    <div class="row mb-4">
        <div class="col text-right">
            <a asp-action="CreateFacilityManager" class="btn btn-primary">Create New Manager</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            @if (Model.Any())
            {
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var manager in Model)
                        {
                            <tr>
                                <td>@manager.Id</td>
                                <td>@manager.Name</td>
                                <td>@manager.Surname</td>
                                <td>
                                    <a asp-action="UpdateFacilityManager" asp-route-id="@manager.Id" class="btn btn-warning btn-sm">Update</a>
                                    <a asp-action="DeleteFacilityManager" asp-route-id="@manager.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    No facility managers available. You can create a new one.
                </div>
            }
        </div>
    </div>
</div>
