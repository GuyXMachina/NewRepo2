@model IEnumerable<FacilityManager>

<h2>Facility Managers</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th> <!-- Column for Update button -->
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model)
            {
                <tr>
                    <td>@manager.EmployeeID</td>
                    <td>@manager.Name</td>
                    <td>@manager.Surname</td>
                    <td>
                        <a asp-action="UpdateFacilityManager" asp-route-id="@manager.EmployeeID" class="btn btn-secondary">Update</a>
                        <a asp-action="DeleteFacilityManager" asp-route-id="@manager.EmployeeID" class="btn btn-danger">Delete</a>
                    </td>
                    <!-- Add more fields as needed -->
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="CreateFacilityManager" class="btn btn-primary">Create New Manager</a>
}
else
{
    <p>No facility managers available. You can create a new one.</p>
    <a asp-action="CreateFacilityManager" class="btn btn-primary">Create New Manager</a>
}
