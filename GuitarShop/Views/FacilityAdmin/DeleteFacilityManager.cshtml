@model FacilityManager

<h2>Delete Facility Manager</h2>

<p>Are you sure you want to delete this Facility Manager?</p>

<div>
    <h4>Facility Manager Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <!-- Add other fields as needed -->
    </dl>

    <form asp-action="DeleteFacilityManagerConfirmed" asp-controller="FacilityAdmin" method="post">
        <input type="hidden" asp-for="FacilityManagerId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="FacilityManagers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
