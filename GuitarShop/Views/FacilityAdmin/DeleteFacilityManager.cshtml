@model User

<h2>Delete Facility Manager</h2>

<p>Are you sure you want to delete this Facility Manager?</p>

<div>
    <h4>Facility Manager Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <!-- Add other fields as needed -->
    </dl>

    <form asp-action="DeleteFacilityManager" method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="FacilityManagers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
