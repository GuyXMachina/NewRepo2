@model Facility

<h2>Create a New Facility</h2>

<form asp-action="CreateFacility" asp-controller="FacilityAdmin" method="post">
    <input type="hidden" asp-for="FacilityID" />
    <div class="form-group">
        <label asp-for="Code">Facility Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Facility Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricingType">Pricing Type</label>
        <select asp-for="PricingType" asp-items="Html.GetEnumSelectList<PricingType>()" class="form-control">
            <option value="">Select Pricing Type</option>
        </select>
        <span asp-validation-for="PricingType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>
    <!-- Add more fields here like Location, Capacity, and AvailabilityTimes -->
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity">Capacity</label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailabilityTimes">Availability Times</label>
        <input asp-for="AvailabilityTimes" class="form-control" />
        <span asp-validation-for="AvailabilityTimes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
